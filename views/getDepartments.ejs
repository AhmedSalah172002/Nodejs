<%- include('parts/head')%> <%- include('parts/navbar')%>


        <div class="user mb-5">
            <h1 class="mb-3" style="color: white;">الأقسام :</h1>
            <table class="table table-striped table-dark">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Dept_Name</th>
                    <th scope="col">Dept_Code</th>
                    <th scope="col">Settings</th>
                  </tr>
                </thead>
                <tbody>
                    <%  for (let i = 0; i < items.length; i++) {  %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <form class="delete-form" method="POST">
                            <td><%= items[i].deptName %></td>
                            <td><%= items[i].deptCode %></td>
                            <td>
                              <input type="hidden" name="deptId" value="<%= items[i]._id %>">
                              <a
                              class="my-btn-"
                              href="/departments/<%= items[i]._id %>">
                              تعديل
                              </a>
                              <input type="submit" class="delete" value="حذف"  formaction="/getDepartments/delete">
                            </td>
                          </form>
                          </tr>
                    <% } %>
                </tbody>
              </table>
        </div>
    </div>
</div>

